@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

<div class="animate-fade-in">
    <!-- Page Header -->
    <div class="page-header mb-6">
        <div class="relative z-10">
            <div class="flex items-center gap-3">
                <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                    <i class="fas fa-user-cog text-2xl text-primary"></i>
                </div>
                <div>
                    <h1 class="text-4xl font-bold text-base-content">Account Management</h1>
                    <p class="text-base-content/70 mt-1">Manage your account settings and preferences</p>
                </div>
            </div>
        </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
        <!-- Sidebar Navigation -->
        <div class="lg:col-span-1">
            <div class="bg-base-100 rounded-lg border border-base-300 p-4 sticky top-24">
                <partial name="_ManageNav" />
            </div>
        </div>

        <!-- Main Content -->
        <div class="lg:col-span-3">
            @RenderBody()
        </div>
    </div>
</div>

@section Scripts {
    @RenderSection("Scripts", required: false)
}
