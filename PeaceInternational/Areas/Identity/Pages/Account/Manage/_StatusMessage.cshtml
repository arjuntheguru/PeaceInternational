@model string

@if (!String.IsNullOrEmpty(Model))
{
    var isError = Model.StartsWith("Error");
    var alertClass = isError ? "alert-error" : "alert-success";
    var icon = isError ? "fa-exclamation-circle" : "fa-check-circle";

    <div class="alert @alertClass shadow-lg mb-6" role="alert">
        <div>
            <i class="fas @icon text-lg"></i>
            <span>@Model</span>
        </div>
    </div>
}
