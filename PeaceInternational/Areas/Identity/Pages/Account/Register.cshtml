@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full">
        <div class="card bg-base-100 shadow-2xl">
            <div class="card-body">
                <!-- Logo and Title -->
                <div class="text-center mb-6">
                    <div class="avatar mb-4">
                        <div class="w-24 rounded-full bg-primary">
                            <img src="~/img/logo.png" alt="Peace International" />
                        </div>
                    </div>
                    <h1 class="text-3xl font-bold text-base-content">Create Account</h1>
                    <p class="text-base-content/70 mt-2">Join Peace International Tours</p>
                </div>

                <div asp-validation-summary="All" class="alert alert-error mb-4" role="alert" style="display: none;"></div>

                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <!-- Email -->
                    <div class="form-control mb-4">
                        <label class="label" asp-for="Input.Email">
                            <span class="label-text font-semibold">Email</span>
                        </label>
                        <div class="input-group">
                            <span class="bg-base-200 px-4 flex items-center">
                                <i class="fas fa-envelope text-base-content/50"></i>
                            </span>
                            <input asp-for="Input.Email"
                                   class="input input-bordered flex-1"
                                   placeholder="Enter your email"
                                   autofocus />
                        </div>
                        <label class="label">
                            <span asp-validation-for="Input.Email" class="label-text-alt text-error"></span>
                        </label>
                    </div>

                    <!-- Password -->
                    <div class="form-control mb-4">
                        <label class="label" asp-for="Input.Password">
                            <span class="label-text font-semibold">Password</span>
                        </label>
                        <div class="input-group">
                            <span class="bg-base-200 px-4 flex items-center">
                                <i class="fas fa-lock text-base-content/50"></i>
                            </span>
                            <input asp-for="Input.Password"
                                   class="input input-bordered flex-1"
                                   placeholder="Choose a strong password" />
                        </div>
                        <label class="label">
                            <span asp-validation-for="Input.Password" class="label-text-alt text-error"></span>
                        </label>
                    </div>

                    <!-- Confirm Password -->
                    <div class="form-control mb-6">
                        <label class="label" asp-for="Input.ConfirmPassword">
                            <span class="label-text font-semibold">Confirm Password</span>
                        </label>
                        <div class="input-group">
                            <span class="bg-base-200 px-4 flex items-center">
                                <i class="fas fa-lock text-base-content/50"></i>
                            </span>
                            <input asp-for="Input.ConfirmPassword"
                                   class="input input-bordered flex-1"
                                   placeholder="Re-enter your password" />
                        </div>
                        <label class="label">
                            <span asp-validation-for="Input.ConfirmPassword" class="label-text-alt text-error"></span>
                        </label>
                    </div>

                    <!-- Submit Button -->
                    <div class="form-control">
                        <button type="submit" class="btn btn-primary btn-block gap-2">
                            <i class="fas fa-user-plus"></i>
                            Register
                        </button>
                    </div>
                </form>

                <!-- Additional Links -->
                <div class="divider">Already have an account?</div>

                <div class="text-center">
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-ghost btn-block">
                        <i class="fas fa-sign-in-alt mr-2"></i>
                        Sign in instead
                    </a>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="text-center mt-6 text-sm text-base-content/50">
            <p>&copy; 2025 Peace International Tours. All rights reserved.</p>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Show validation summary if there are errors
        const validationSummary = document.querySelector('[asp-validation-summary]');
        if (validationSummary && validationSummary.querySelector('ul li')) {
            validationSummary.style.display = 'block';
        }
    </script>
}
