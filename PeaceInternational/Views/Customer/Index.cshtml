
@{
    ViewData["Title"] = "Customer";
}

<div class="row">
    <div class="col-md-10">
        <h1 class="display-4">Customer</h1>
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-info mt-4 w-100" data-toggle="modal" data-target="#createCustomer" id="addCustomerBtn" value="Add Customer" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-2">
        <input type="text" class="form-control" id="searchFieldFileCode" placeholder="File Code No." />
    </div>
    <div class="col-md-5">
        <input type="text" class="form-control" id="searchFieldTourName" placeholder="Tour Name" />
    </div>
    <div class="col-md-5">
        <input type="text" class="form-control" id="searchFieldAgent" placeholder="Agent Name" />
    </div>
</div>
<div style="height: 100%; box-sizing: border-box; padding-top:20px;">
    <div id="customerGrid" style="width:100%; height:450px" class="ag-theme-balham"></div>
</div>
<div class="modal fade" id="createCustomer" tabindex="-1" role="dialog" aria-labelledby="customerTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="customerForm">
            <div class="modal-content" style="background: linear-gradient(225deg, rgba(255,255,255,1) 0%, rgba(232,227,227,1) 100%);">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-light" id="customerTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="text-light" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="id" />
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="tourName"> Tour Name <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="tourName" id="tourName" oninput="this.value = this.value.toUpperCase()" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="country"> Country <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" name="country" id="country" oninput="this.value = this.value.toUpperCase()"/>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="arrivalDate"> Arrival Date </label>
                                <input type="date" class="form-control" name="arrivalDate" id="arrivalDate" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="departureDate"> Departure Date </label>
                                <input type="date" class="form-control" name="departureDate" id="departureDate" />
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="agent"> Agent </label>
                                <input type="text" class="form-control" name="agent" id="agent" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="agentStaff"> Agent Staff</label>
                                <input type="text" class="form-control" name="agentStaff" id="agentStaff" />
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="guideName"> Guide Name</label>
                                <input type="text" class="form-control" name="guideName" id="guideName" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/customer.js"></script>
}




