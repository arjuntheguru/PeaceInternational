@{
    ViewData["Title"] = "Customer";
}

<div class="animate-fade-in">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div>
            <h1 class="text-4xl font-bold text-base-content">Customer Management</h1>
            <p class="text-base-content/70 mt-2">Manage tour bookings and customer information</p>
        </div>
        <label for="customer-drawer" class="btn btn-primary gap-2 drawer-button">
            <i class="fas fa-plus"></i>
            Add Customer
        </label>
    </div>

    <!-- Search and Filters -->
    <div class="card bg-base-200 shadow-xl mb-6">
        <div class="card-body">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">File Code No.</span>
                    </label>
                    <input type="text" id="searchFieldFileCode" placeholder="Search by file code..." class="input input-bordered" />
                </div>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Tour Name</span>
                    </label>
                    <input type="text" id="searchFieldTourName" placeholder="Search by tour name..." class="input input-bordered" />
                </div>
                <div class="form-control">
                    <label class="label">
                        <span class="label-text">Agent Name</span>
                    </label>
                    <input type="text" id="searchFieldAgent" placeholder="Search by agent..." class="input input-bordered" />
                </div>
            </div>
        </div>
    </div>

    <!-- Customer Table -->
    <div class="card bg-base-100 shadow-xl">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full" id="customerTable">
                    <thead class="bg-primary text-primary-content">
                        <tr>
                            <th class="normal-case text-base">File Code</th>
                            <th class="normal-case text-base">Tour Name</th>
                            <th class="normal-case text-base">Country</th>
                            <th class="normal-case text-base">Arrival</th>
                            <th class="normal-case text-base">Departure</th>
                            <th class="normal-case text-base">Agent</th>
                            <th class="normal-case text-base">Agent Staff</th>
                            <th class="normal-case text-base">Guide</th>
                            <th class="normal-case text-base text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr>
                            <td colspan="9" class="text-center py-12">
                                <div class="loading loading-spinner loading-lg text-primary"></div>
                                <p class="mt-4">Loading customers...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Drawer for Add/Edit Customer -->
<div class="drawer drawer-end z-50">
    <input id="customer-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-side">
        <label for="customer-drawer" class="drawer-overlay"></label>
        <div class="bg-base-100 w-full md:w-[600px] min-h-full shadow-2xl">
            <div class="sticky top-0 bg-primary text-primary-content p-6 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold" id="customerTitle">Add Customer</h2>
                    <label for="customer-drawer" class="btn btn-ghost btn-circle">
                        <i class="fas fa-times text-xl"></i>
                    </label>
                </div>
            </div>

            <form id="customerForm" class="p-6">
                <input type="hidden" id="id" />

                <div class="space-y-4">
                    <!-- Tour Name -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Tour Name <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="tourName"
                               id="tourName"
                               placeholder="Enter tour name"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="tourName-error"></span>
                        </label>
                    </div>

                    <!-- Country -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Country <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="country"
                               id="country"
                               placeholder="Enter country"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="country-error"></span>
                        </label>
                    </div>

                    <!-- Dates -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Arrival Date</span>
                            </label>
                            <input type="date"
                                   class="input input-bordered"
                                   name="arrivalDate"
                                   id="arrivalDate" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="arrivalDate-error"></span>
                            </label>
                        </div>
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Departure Date</span>
                            </label>
                            <input type="date"
                                   class="input input-bordered"
                                   name="departureDate"
                                   id="departureDate" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="departureDate-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Agent -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Agent</span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="agent"
                               id="agent"
                               placeholder="Enter agent name" />
                    </div>

                    <!-- Agent Staff -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Agent Staff</span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="agentStaff"
                               id="agentStaff"
                               placeholder="Enter agent staff name" />
                    </div>

                    <!-- Guide Name -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Guide Name</span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="guideName"
                               id="guideName"
                               placeholder="Enter guide name" />
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 mt-8 sticky bottom-0 bg-base-100 pt-4 border-t border-base-300">
                    <button type="submit" class="btn btn-primary flex-1" id="btnSave">
                        <i class="fas fa-save mr-2"></i>
                        Save Customer
                    </button>
                    <label for="customer-drawer" class="btn btn-ghost flex-1">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Container for Notifications -->
<div class="toast toast-top toast-center z-[100]" id="toastContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/customer.js"></script>
}
