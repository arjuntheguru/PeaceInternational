@{
    ViewData["Title"] = "Guide";
}

<div class="animate-fade-in">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div>
            <h1 class="text-4xl font-bold text-base-content">Guide Management</h1>
            <p class="text-base-content/70 mt-2">Manage tour guides and their rates</p>
        </div>
        <label for="guide-drawer" class="btn btn-primary gap-2 drawer-button">
            <i class="fas fa-plus"></i>
            Add Guide
        </label>
    </div>

    <!-- Search -->
    <div class="card bg-base-200 shadow-lg mb-6">
        <div class="card-body">
            <div class="form-control">
                <div class="input-group">
                    <input type="text" id="searchField" placeholder="Search by guide name..." class="input input-bordered flex-1" />
                    <button class="btn btn-square btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Guide Table -->
    <div class="card bg-base-100 shadow-lg">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full" id="guideTable">
                    <thead class="bg-primary text-primary-content">
                        <tr>
                            <th class="normal-case text-base">Guide Name</th>
                            <th class="normal-case text-base">Full Day Rate</th>
                            <th class="normal-case text-base">Half Day Rate</th>
                            <th class="normal-case text-base">Overnight Rate</th>
                            <th class="normal-case text-base text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr>
                            <td colspan="5" class="text-center py-12">
                                <div class="loading loading-spinner loading-lg text-primary"></div>
                                <p class="mt-4">Loading guides...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Drawer for Add/Edit Guide -->
<div class="drawer drawer-end z-50">
    <input id="guide-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-side">
        <label for="guide-drawer" class="drawer-overlay"></label>
        <div class="bg-base-100 w-full md:w-[600px] min-h-full shadow-2xl">
            <div class="sticky top-0 bg-primary text-primary-content p-6 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold" id="guideTitle">Add Guide</h2>
                    <label for="guide-drawer" class="btn btn-ghost btn-circle btn-sm">
                        <i class="fas fa-times text-xl"></i>
                    </label>
                </div>
            </div>

            <form id="guideForm" class="p-6">
                <input type="hidden" id="id" />

                <div class="space-y-4">
                    <!-- Guide Name -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Guide Name <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="name"
                               id="name"
                               placeholder="Enter guide name"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="name-error"></span>
                        </label>
                    </div>

                    <!-- Rates -->
                    <div class="divider">Guide Rates</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Full Day Rate <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="fullDayRate"
                                   id="fullDayRate"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="fullDayRate-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Half Day Rate <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="halfDayRate"
                                   id="halfDayRate"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="halfDayRate-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Overnight Rate <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="overnight"
                                   id="overnight"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="overnight-error"></span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 mt-8 sticky bottom-0 bg-base-100 pt-4 border-t border-base-300">
                    <button type="submit" class="btn btn-primary flex-1" id="btnSave">
                        <i class="fas fa-save mr-2"></i>
                        Save Guide
                    </button>
                    <label for="guide-drawer" class="btn btn-ghost flex-1">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast toast-top toast-center z-[100]" id="toastContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/guide.js"></script>
}
