@{
    ViewData["Title"] = "Home";
}

<!-- Modern Hero Section -->
<div class="hero min-h-[65vh] bg-base-200">

    <div class="hero-content text-center relative z-10">
        <div class="max-w-4xl">
            <div class="inline-block mb-6 px-6 py-3 bg-primary/10 rounded-full">
                <span class="text-primary font-semibold">Welcome to</span>
            </div>
            <h1 class="text-5xl md:text-7xl font-bold text-base-content mb-6">
                Peace International Tours
            </h1>
            <p class="text-xl md:text-2xl text-base-content/70 mb-10 leading-relaxed max-w-2xl mx-auto">
                Your trusted partner in creating unforgettable travel experiences worldwide.
            </p>
            <div class="flex gap-4 justify-center flex-wrap">
                <a asp-controller="TourCost" asp-action="Index" class="btn btn-accent btn-lg gap-2 shadow-xl hover:scale-105 transition-transform">
                    <i class="fas fa-plane"></i>
                    View Tour Costs
                </a>
                <a asp-controller="Customer" asp-action="Index" class="btn btn-outline btn-lg gap-2">
                    <i class="fas fa-users"></i>
                    Customers
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Divider -->
<div class="divider my-12"></div>

<!-- Quick Access Section -->
<div class="max-w-6xl mx-auto px-4 mb-20">
    <h2 class="text-3xl font-bold text-center mb-12 text-base-content">Quick Access</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Invoice -->
        <a asp-controller="Invoice" asp-action="Index"
           class="card bg-base-100 border border-base-300 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="card-body items-center text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                    <i class="fas fa-file-invoice-dollar text-3xl text-primary"></i>
                </div>
                <h3 class="card-title text-lg">Invoices</h3>
                <p class="text-sm text-base-content/60">Manage invoices</p>
            </div>
        </a>

        <!-- Service Voucher -->
        <a asp-controller="ServiceVoucher" asp-action="Index"
           class="card bg-base-100 border border-base-300 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="card-body items-center text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                    <i class="fas fa-receipt text-3xl text-primary"></i>
                </div>
                <h3 class="card-title text-lg">Service Vouchers</h3>
                <p class="text-sm text-base-content/60">Track vouchers</p>
            </div>
        </a>

        <!-- Tour Cost -->
        <a asp-controller="TourCost" asp-action="Index"
           class="card bg-base-100 border border-base-300 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="card-body items-center text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                    <i class="fas fa-dollar-sign text-3xl text-primary"></i>
                </div>
                <h3 class="card-title text-lg">Tour Costs</h3>
                <p class="text-sm text-base-content/60">Manage pricing</p>
            </div>
        </a>

        <!-- Customers -->
        <a asp-controller="Customer" asp-action="Index"
           class="card bg-base-100 border border-base-300 hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
            <div class="card-body items-center text-center">
                <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center mb-4">
                    <i class="fas fa-users text-3xl text-primary"></i>
                </div>
                <h3 class="card-title text-lg">Customers</h3>
                <p class="text-sm text-base-content/60">Customer data</p>
            </div>
        </a>
    </div>
</div>

<!-- Stats Section -->
<div class="bg-base-200 py-16">
    <div class="max-w-6xl mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            <div>
                <div class="text-4xl font-bold text-primary mb-2">50+</div>
                <div class="text-base-content/70">Countries Covered</div>
            </div>
            <div>
                <div class="text-4xl font-bold text-primary mb-2">10,000+</div>
                <div class="text-base-content/70">Happy Travelers</div>
            </div>
            <div>
                <div class="text-4xl font-bold text-primary mb-2">15+</div>
                <div class="text-base-content/70">Years Experience</div>
            </div>
        </div>
    </div>
</div>
