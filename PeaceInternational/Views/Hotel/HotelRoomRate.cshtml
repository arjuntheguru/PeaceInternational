@{
    ViewData["Title"] = "Hotel Room Rate";
}

<div class="animate-fade-in">
    <!-- Modern Page Header -->
    <div class="page-header">
        <div class="relative z-10 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div>
                <div class="flex items-center gap-3 mb-3">
                    <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                        <i class="fas fa-bed text-2xl text-primary"></i>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-base-content">Hotel Room Rates</h1>
                        <p class="text-base-content/70 mt-1">Manage room rates and meal plans</p>
                    </div>
                </div>
            </div>
            <label for="roomrate-drawer" class="btn btn-accent btn-lg gap-2 drawer-button shadow-lg hover:scale-105 transition-transform">
                <i class="fas fa-plus"></i>
                Add Room Rate
            </label>
        </div>
    </div>

    <!-- Search -->
    <div class="bg-base-200 rounded-lg p-6 mb-6">
        <div class="form-control">
            <label class="label">
                <span class="label-text font-medium">Hotel Name</span>
            </label>
            <label class="input flex items-center gap-2 bg-base-100">
                <i class="fas fa-hotel text-base-content/40"></i>
                <input type="text" id="searchField" placeholder="Search..." class="grow" />
            </label>
        </div>
    </div>

    <!-- Room Rate Table -->
    <div class="card bg-base-100 shadow-lg">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full" id="roomrateTable">
                    <thead class="bg-primary text-primary-content">
                        <tr>
                            <th class="normal-case text-base">Hotel</th>
                            <th class="normal-case text-base">Single Bed</th>
                            <th class="normal-case text-base">Double Bed</th>
                            <th class="normal-case text-base">Extra Bed</th>
                            <th class="normal-case text-base">AP</th>
                            <th class="normal-case text-base">MAP</th>
                            <th class="normal-case text-base text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr>
                            <td colspan="7" class="text-center py-12">
                                <div class="loading loading-spinner loading-lg text-primary"></div>
                                <p class="mt-4">Loading room rates...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Drawer for Add/Edit Room Rate -->
<div class="drawer drawer-end z-50">
    <input id="roomrate-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-side">
        <label for="roomrate-drawer" class="drawer-overlay"></label>
        <div class="bg-base-100 w-full md:w-[600px] min-h-full shadow-2xl">
            <div class="sticky top-0 bg-primary text-primary-content p-6 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold" id="roomrateTitle">Add Room Rate</h2>
                    <label for="roomrate-drawer" class="btn btn-ghost btn-circle btn-sm">
                        <i class="fas fa-times text-xl"></i>
                    </label>
                </div>
            </div>

            <form id="hotelRoomRateForm" class="p-6">
                <input type="hidden" id="id" />

                <div class="space-y-4">
                    <!-- Hotel Selection -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Hotel <span class="text-error">*</span></span>
                        </label>
                        <select class="select select-bordered" name="hotel" id="hotel">
                            <option disabled selected value="">Select Hotel</option>
                        </select>
                        <label class="label">
                            <span class="label-text-alt text-error" id="hotel-error"></span>
                        </label>
                    </div>

                    <!-- Room Rates -->
                    <div class="divider">Room Rates</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Single Bed <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="singleBed"
                                   id="singleBed"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="singleBed-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Double Bed <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="doubleBed"
                                   id="doubleBed"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="doubleBed-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Extra Bed <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="extraBed"
                                   id="extraBed"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="extraBed-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Meal Plans -->
                    <div class="divider">Meal Plans</div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">AP (American Plan) <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="ap"
                                   id="ap"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="ap-error"></span>
                                <span class="label-text-alt">Breakfast + Lunch + Dinner</span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">MAP (Modified American Plan) <span class="text-error">*</span></span>
                            </label>
                            <input type="number"
                                   class="input input-bordered"
                                   name="map"
                                   id="map"
                                   placeholder="0.00"
                                   step="0.01" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="map-error"></span>
                                <span class="label-text-alt">Breakfast + Lunch/Dinner</span>
                            </label>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 mt-8 sticky bottom-0 bg-base-100 pt-4 border-t border-base-300">
                    <button type="submit" class="btn btn-primary flex-1" id="btnSave">
                        <i class="fas fa-save mr-2"></i>
                        Save Room Rate
                    </button>
                    <label for="roomrate-drawer" class="btn btn-ghost flex-1">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast toast-top toast-center z-[100]" id="toastContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/hotelRoomRate.js"></script>
}
