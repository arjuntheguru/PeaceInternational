@{
    ViewData["Title"] = "Hotel";
}

<div class="animate-fade-in">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div>
            <h1 class="text-4xl font-bold text-base-content">Hotel Management</h1>
            <p class="text-base-content/70 mt-2">Manage hotel information and rates</p>
        </div>
        <label for="hotel-drawer" class="btn btn-primary gap-2 drawer-button">
            <i class="fas fa-plus"></i>
            Add Hotel
        </label>
    </div>

    <!-- Search -->
    <div class="card bg-base-200 shadow-lg mb-6">
        <div class="card-body">
            <div class="form-control">
                <div class="input-group">
                    <input type="text" id="searchField" placeholder="Search by hotel name..." class="input input-bordered flex-1" />
                    <button class="btn btn-square btn-primary">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Hotel Table -->
    <div class="card bg-base-100 shadow-lg">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full" id="hotelTable">
                    <thead class="bg-primary text-primary-content">
                        <tr>
                            <th class="normal-case text-base">Hotel Name</th>
                            <th class="normal-case text-base">Code</th>
                            <th class="normal-case text-base">Category</th>
                            <th class="normal-case text-base">Address</th>
                            <th class="normal-case text-base">Phone</th>
                            <th class="normal-case text-base text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr>
                            <td colspan="6" class="text-center py-12">
                                <div class="loading loading-spinner loading-lg text-primary"></div>
                                <p class="mt-4">Loading hotels...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Drawer for Add/Edit Hotel -->
<div class="drawer drawer-end z-50">
    <input id="hotel-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-side">
        <label for="hotel-drawer" class="drawer-overlay"></label>
        <div class="bg-base-100 w-full md:w-[600px] min-h-full shadow-2xl">
            <div class="sticky top-0 bg-primary text-primary-content p-6 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold" id="hotelTitle">Add Hotel</h2>
                    <label for="hotel-drawer" class="btn btn-ghost btn-circle btn-sm">
                        <i class="fas fa-times text-xl"></i>
                    </label>
                </div>
            </div>

            <form id="hotelForm" class="p-6">
                <input type="hidden" id="id" />

                <div class="space-y-4">
                    <!-- Hotel Name -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Hotel Name <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="name"
                               id="name"
                               placeholder="Enter hotel name"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="name-error"></span>
                        </label>
                    </div>

                    <!-- Code and Category -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Code <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="code"
                                   id="code"
                                   placeholder="Hotel code"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="code-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Category <span class="text-error">*</span></span>
                            </label>
                            <select class="select select-bordered" name="category" id="category">
                                <option disabled selected value="">Select Category</option>
                                <option value="A">Category A</option>
                                <option value="B">Category B</option>
                                <option value="C">Category C</option>
                            </select>
                            <label class="label">
                                <span class="label-text-alt text-error" id="category-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Address <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="address"
                               id="address"
                               placeholder="Hotel address"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="address-error"></span>
                        </label>
                    </div>

                    <!-- Phone Number -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Phone Number <span class="text-error">*</span></span>
                        </label>
                        <input type="tel"
                               class="input input-bordered"
                               name="phoneNo"
                               id="phoneNo"
                               placeholder="Phone number" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="phoneNo-error"></span>
                        </label>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 mt-8 sticky bottom-0 bg-base-100 pt-4 border-t border-base-300">
                    <button type="submit" class="btn btn-primary flex-1" id="btnSave">
                        <i class="fas fa-save mr-2"></i>
                        Save Hotel
                    </button>
                    <label for="hotel-drawer" class="btn btn-ghost flex-1">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Toast Container -->
<div class="toast toast-top toast-center z-[100]" id="toastContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/hotel.js"></script>
}
