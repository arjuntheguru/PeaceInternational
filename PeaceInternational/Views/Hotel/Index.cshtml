
@{
    ViewData["Title"] = "Hotel";
}

<div class="row">
    <div class="col-md-10">
        <h1 class="display-4">Hotel</h1>
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-info mt-4 w-100" data-toggle="modal" data-target="#createHotel" id="addHotelBtn" value="Add Hotel" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <input type="text" class="form-control" id="searchField" placeholder="Name" />
    </div>
</div>
<div style="height: 100%; box-sizing: border-box; padding-top:20px;">
    <div id="hotelGrid" style="width:100%; height:450px" class="ag-theme-balham"></div>
</div>
<div class="modal fade" id="createHotel" tabindex="-1" role="dialog" aria-labelledby="hotelTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="hotelForm">
            <div class="modal-content" style="background: linear-gradient(225deg, rgba(255,255,255,1) 0%, rgba(232,227,227,1) 100%);">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-light" id="hotelTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="text-light" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="id" />
                    <div class="form-group">
                        <label for="name"> Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="name" id="name" />
                    </div>
                    <div class="form-group">
                        <label for="address"> Address <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="address" id="address" />
                    </div>
                    <div class="form-group">
                        <label for="name"> Phone Number <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="phoneNo" id="phoneNo" />
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/hotel.js"></script>
}




