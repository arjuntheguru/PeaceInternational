
@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-10">
        <h1 class="display-4">Hotel Receipt</h1>
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-dark mt-4 w-100" data-toggle="modal" data-target="#createHotelReceipt" id="addHotelReceiptBtn" value="Add Hotel Receipt" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <input type="text" class="form-control" id="searchField" placeholder="Receipt No" />
    </div>
</div>
<div style="height: 100%; box-sizing: border-box; padding-top:20px;">
    <div id="hotelReceiptGrid" style="width: 100%; height:450px" class="ag-theme-balham"></div>
</div>
<div class="modal fade" id="createHotelReceipt" tabindex="-1" role="dialog" aria-labelledby="hotelReceiptTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document" style="max-width:80%;border:double;" !important;>
        <form id="hotelReceiptForm">
            <div class="modal-content" style="background: linear-gradient(225deg, rgba(255,255,255,1) 0%, rgba(232,227,227,1) 100%);">
                <div class="modal-header bg-dark">
                    <h5 class="modal-title text-light" id="hotelReceiptTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="text-light" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="id" />
                    <div class="form-row">
                        <div class="col-md-4">
                            <label for="date"> Date <span class="text-danger">*</span></label>
                            <output type="text" class="form-control" name="date" id="date" />
                        </div>
                        <div class="col-md-4">
                            <label for="exchangeOrderNo"> Exchange Order No. <span class="text-danger">*</span></label>
                            <input type="number" class="form-control" name="exchangeOrderNo" id="exchangeOrderNo" />
                        </div>
                        <div class="col-md-4">
                            <label for="fileCodeNo"> File Code No. <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="fileCodeNo" id="fileCodeNo" />
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="col-md-3">
                            <label for="hotel">Hotel<span class="text-danger">*</span></label>
                            <select class="form-control w-100" name="hotel" id="hotel">
                                <option disabled selected value=" ">Select</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label for="clientName"> Client Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="clientName" id="clientName" />
                        </div>
                        <div class="col-md-3">
                            <label for="pax"> PAX <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="pax" id="pax" />
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="col-md-4">
                            <label for="arrivalOn"> Arrival On <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="arrivalOn" id="arrivalOn" />
                        </div>
                        <div class="col-md-4">
                            <label for="from"> From <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="from" id="from" />
                        </div>
                        <div class="col-md-4">
                            <label for="arrivalFlight"> Flight No. <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="arrivalFlight" id="arrivalFlight" />
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="col-md-4">
                            <label for="departureOn"> Departure On <span class="text-danger">*</span></label>
                            <input type="date" class="form-control" name="departureOn" id="departureOn" />
                        </div>
                        <div class="col-md-4">
                            <label for="to"> To <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="to" id="to" />
                        </div>
                        <div class="col-md-4">
                            <label for="departureFlight"> Flight No. <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" name="departureFlight" id="departureFlight" />
                        </div>
                    </div>
                    <br />
                    <div class="form-row">
                        <div class="col-md-12">
                            <label for="services"> Services <span class="text-danger">*</span></label>
                            <textarea rows="5" class="form-control" name="services" id="services" placeholder="Add Services Here"></textarea>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>

            </div>
        </form>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/hotelReceipt.js"></script>
}

