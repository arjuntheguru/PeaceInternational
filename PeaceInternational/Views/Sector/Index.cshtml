
@{
    ViewData["Title"] = "Sector";
}

<div class="row">
    <div class="col-md-10">
        <h1 class="display-4">Sector</h1>
    </div>
    <div class="col-md-2">
        <input type="button" class="btn btn-info mt-4 w-100" data-toggle="modal" data-target="#createSector" id="addSectorBtn" value="Add Sector" />
    </div>
</div>
<hr />
<div class="row">
    <div class="col-md-6">
        <input type="text" class="form-control" id="searchField" placeholder="Name" />
    </div>
</div>
<div style="height: 100%; box-sizing: border-box; padding-top:20px;">
    <div id="sectorGrid" style="width:100%; height:450px" class="ag-theme-balham"></div>
</div>
<div class="modal fade" id="createSector" tabindex="-1" role="dialog" aria-labelledby="sectorTitle" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form id="sectorForm">
            <div class="modal-content" style="background: linear-gradient(225deg, rgba(255,255,255,1) 0%, rgba(232,227,227,1) 100%);">
                <div class="modal-header bg-info">
                    <h5 class="modal-title text-light" id="sectorTitle"></h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span class="text-light" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="id" />
                    <div class="form-group">
                        <label for="name"> Name <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="name" id="name" oninput="this.value = this.value.toUpperCase()" />
                    </div>
                    <div class="form-group">
                        <label for="code"> Code <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" name="code" id="code" oninput="this.value = this.value.toUpperCase()" />
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-2">
                                <label for="code"> T1 (03-05) PAX <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t1hdcost" id="t1hdcost" placeholder="Half Day Cost" />
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t1fdcost" id="t1fdcost" placeholder="Full Day Cost" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-2">
                                <label for="code"> T2 (06-09) PAX <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t2hdcost" id="t2hdcost" placeholder="Half Day Cost" />
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t2fdcost" id="t2fdcost" placeholder="Full Day Cost" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-2">
                                <label for="code"> T3 (10-14) PAX <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t3hdcost" id="t3hdcost" placeholder="Half Day Cost" />
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t3fdcost" id="t3fdcost" placeholder="Full Day Cost" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-2">
                                <label for="code"> T4 (15-19) PAX <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t4hdcost" id="t4hdcost" placeholder="Half Day Cost" />
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t4fdcost" id="t4fdcost" placeholder="Full Day Cost" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-2">
                                <label for="code"> T5 (20-24) PAX <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t5hdcost" id="t5hdcost" placeholder="Half Day Cost" />
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t5fdcost" id="t5fdcost" placeholder="Full Day Cost" />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-row">
                            <div class="col-md-2">
                                <label for="code"> T6 (25) PAX <span class="text-danger">*</span></label>
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t6hdcost" id="t6hdcost" placeholder="Half Day Cost" />
                            </div>
                            <div class="col-md-5">
                                <input type="number" class="form-control" name="t6fdcost" id="t6fdcost" placeholder="Full Day Cost" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnSave">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>

                </div>
        </form>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/sector.js"></script>
}




