@{
    ViewData["Title"] = "Service Voucher";
}

<div class="animate-fade-in">
    <!-- Modern Page Header -->
    <div class="page-header">
        <div class="relative z-10 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div>
                <div class="flex items-center gap-3 mb-3">
                    <div class="w-12 h-12 rounded-xl bg-primary/10 flex items-center justify-center">
                        <i class="fas fa-receipt text-2xl text-primary"></i>
                    </div>
                    <div>
                        <h1 class="text-4xl font-bold text-base-content">Service Voucher Management</h1>
                        <p class="text-base-content/70 mt-1">Manage service vouchers for tours</p>
                    </div>
                </div>
            </div>
            <label for="voucher-drawer" class="btn btn-accent btn-lg gap-2 shadow-lg hover:scale-105 transition-transform drawer-button">
                <i class="fas fa-plus"></i>
                Add Service Voucher
            </label>
        </div>
    </div>

    <!-- Multi-field Search -->
    <div class="bg-base-200 rounded-lg p-6 mb-6">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Receipt No.</span>
                </label>
                <label class="input flex items-center gap-2 bg-base-100">
                    <i class="fas fa-hashtag text-base-content/40"></i>
                    <input type="text" id="searchFieldReceipt" placeholder="Search..." class="grow" />
                </label>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">File Code</span>
                </label>
                <label class="input flex items-center gap-2 bg-base-100">
                    <i class="fas fa-file-code text-base-content/40"></i>
                    <input type="text" id="searchFieldFileCode" placeholder="Search..." class="grow" />
                </label>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Hotel</span>
                </label>
                <label class="input flex items-center gap-2 bg-base-100">
                    <i class="fas fa-hotel text-base-content/40"></i>
                    <input type="text" id="searchFieldHotel" placeholder="Search..." class="grow" />
                </label>
            </div>
            <div class="form-control">
                <label class="label">
                    <span class="label-text font-medium">Client Name</span>
                </label>
                <label class="input flex items-center gap-2 bg-base-100">
                    <i class="fas fa-user text-base-content/40"></i>
                    <input type="text" id="searchFieldClientname" placeholder="Search..." class="grow" />
                </label>
            </div>
        </div>
    </div>

    <!-- Service Voucher Table -->
    <div class="card bg-base-100 shadow-lg">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full" id="voucherTable">
                    <thead class="bg-primary text-primary-content">
                        <tr>
                            <th class="normal-case text-base">Receipt No.</th>
                            <th class="normal-case text-base">File Code</th>
                            <th class="normal-case text-base">Hotel</th>
                            <th class="normal-case text-base">Client Name</th>
                            <th class="normal-case text-base text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr>
                            <td colspan="5" class="text-center py-12">
                                <div class="loading loading-spinner loading-lg text-primary"></div>
                                <p class="mt-4">Loading service vouchers...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Drawer for Add/Edit Service Voucher -->
<div class="drawer drawer-end z-50">
    <input id="voucher-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-side">
        <label for="voucher-drawer" class="drawer-overlay"></label>
        <div class="bg-base-100 w-full md:w-[800px] min-h-full shadow-2xl">
            <div class="sticky top-0 bg-primary text-primary-content p-6 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold" id="serviceVoucherTitle">Add Service Voucher</h2>
                    <label for="voucher-drawer" class="btn btn-ghost btn-circle btn-sm">
                        <i class="fas fa-times text-xl"></i>
                    </label>
                </div>
            </div>

            <form id="serviceVoucherForm" class="p-6">
                <input type="hidden" id="id" />

                <div class="space-y-4">
                    <!-- Basic Info -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Date</span>
                            </label>
                            <input type="text" class="input input-bordered" id="date" disabled />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">File Code No. <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="fileCodeNo"
                                   id="fileCodeNo"
                                   placeholder="Enter file code" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="fileCodeNo-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Hotel and Client Info -->
                    <div class="divider">Service Details</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control md:col-span-2">
                            <label class="label">
                                <span class="label-text font-semibold">Hotel <span class="text-error">*</span></span>
                            </label>
                            <select class="select select-bordered" name="hotel" id="hotel">
                                <option disabled selected value="">Select Hotel</option>
                            </select>
                            <label class="label">
                                <span class="label-text-alt text-error" id="hotel-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">PAX <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="pax"
                                   id="pax"
                                   placeholder="Number of passengers" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="pax-error"></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Client Name <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="clientName"
                               id="clientName"
                               placeholder="Enter client name"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="clientName-error"></span>
                        </label>
                    </div>

                    <!-- Arrival Information -->
                    <div class="divider">Arrival Information</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Arrival On <span class="text-error">*</span></span>
                            </label>
                            <input type="date"
                                   class="input input-bordered"
                                   name="arrivalOn"
                                   id="arrivalOn" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="arrivalOn-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">From <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="from"
                                   id="from"
                                   placeholder="Origin"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="from-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Flight No. <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="arrivalFlight"
                                   id="arrivalFlight"
                                   placeholder="Flight number"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="arrivalFlight-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Departure Information -->
                    <div class="divider">Departure Information</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Departure On <span class="text-error">*</span></span>
                            </label>
                            <input type="date"
                                   class="input input-bordered"
                                   name="departureOn"
                                   id="departureOn" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="departureOn-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">To <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="to"
                                   id="to"
                                   placeholder="Destination"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="to-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Flight No. <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="departureFlight"
                                   id="departureFlight"
                                   placeholder="Flight number"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="departureFlight-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Services -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Services <span class="text-error">*</span></span>
                        </label>
                        <textarea rows="5"
                                  class="textarea textarea-bordered"
                                  name="services"
                                  id="services"
                                  placeholder="Add services here"
                                  oninput="this.value = this.value.toUpperCase()"></textarea>
                        <label class="label">
                            <span class="label-text-alt text-error" id="services-error"></span>
                        </label>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 mt-8 sticky bottom-0 bg-base-100 pt-4 border-t border-base-300">
                    <button type="submit" class="btn btn-primary flex-1" id="btnSave">
                        <i class="fas fa-save mr-2"></i>
                        Save Voucher
                    </button>
                    <label for="voucher-drawer" class="btn btn-ghost flex-1">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View/Print Receipt Modal (Daisy UI Modal) -->
<dialog id="viewReceipt" class="modal">
    <div class="modal-box max-w-6xl">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
        </form>
        <div class="flex items-center gap-3 mb-4">
            <div class="w-10 h-10 rounded-lg bg-primary/10 flex items-center justify-center">
                <i class="fas fa-receipt text-lg text-primary"></i>
            </div>
            <h3 class="font-bold text-2xl">Service Voucher Preview</h3>
        </div>

        <div id="invoiceBody" class="overflow-auto max-h-[70vh] bg-white">
            <!-- Print styles -->
            <style>
                .formsize { height: 820px; margin-top: 0px; margin-bottom: 70px; border-style: solid; border-width: 2px; page-break-after: always; }
                .logo img { max-height: 100%; max-width: 80%; margin-left: 50px; padding-top: 15px; padding-right: 30px; }
                .svaddress { margin: 10px 0px 10px 5px; }
                .svrcol1 { border-style: solid none solid none; border-width: 2px; width: 70%; padding: 4px 0 2px 10px; float: left; }
                .svrcol2 { border-style: solid none solid solid; border-width: 2px; width: 30%; padding: 4px 0 2px 10px; float: right; }
                .svrcol3 { border-style: none none solid none; border-width: 2px; width: 40%; padding: 4px 0 2px 10px; float: left; }
                .svrcol4 { border-style: none none solid none; border-width: 2px; width: 30%; padding: 4px 0 2px 10px; float: left; }
                .svrcol5 { border-style: none none solid none; border-width: 2px; width: 30%; padding: 4px 0 2px 10px; float: right; }
                .svcomment { border-style: none none solid none; border-width: 2px; }
                .svcomment .comment { height: 150px; margin: 0px 15px 16px 15px; }
                .endfooter { margin-top: 4px; }
                .svdetail { margin-bottom: 15px; }
                section { overflow: hidden; }
                h6 { font-size: 19px; margin-bottom: 1px; line-height: 18px; }
                .h7 { font-size: 21px; margin-bottom: 5px; }
                .h8 { font-size: 24px; }
            </style>
            <div id="receiptTemplate1"></div>
            <div id="receiptTemplate2"></div>
        </div>

        <div class="modal-action">
            <button type="button" class="btn btn-primary" id="printInvoice">
                <i class="fas fa-print mr-2"></i>
                Print
            </button>
            <form method="dialog">
                <button class="btn btn-ghost">Close</button>
            </form>
        </div>
    </div>
</dialog>

<!-- Toast Container -->
<div class="toast toast-top toast-center z-[100]" id="toastContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/serviceVoucher.js"></script>
    <script id="entry-template" type="text/x-handlebars-template">
        <style>
            @@media print { 
                body { margin: 0; padding: 20px; } 
                .voucher-container { page-break-after: always; }
            }
            .voucher-container { font-family: Arial, sans-serif; max-width: 900px; margin: 0 auto 30px auto; padding: 20px; color: #000; border: 2px solid #000; }
            .voucher-header { display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 20px; padding-bottom: 15px; border-bottom: 2px solid #000; }
            .logo-section img { max-width: 250px; height: auto; }
            .company-info { font-size: 11px; line-height: 1.6; text-align: right; }
            .voucher-title { font-size: 18px; font-weight: bold; margin: 15px 0; }
            .hotel-info { background: #f5f5f5; padding: 15px; margin: 15px 0; border: 1px solid #ddd; }
            .voucher-details { border: 1px solid #000; margin: 15px 0; }
            .detail-row { display: flex; border-bottom: 1px solid #000; }
            .detail-row:last-child { border-bottom: none; }
            .detail-cell { padding: 10px; font-size: 13px; border-right: 1px solid #000; }
            .detail-cell:last-child { border-right: none; }
            .services-section { border: 1px solid #000; padding: 15px; margin: 15px 0; min-height: 150px; }
            .footer-section { margin-top: 20px; text-align: center; font-size: 13px; font-weight: bold; }
        </style>

        <div class="voucher-container">
            <div class="voucher-header">
                <div class="logo-section">
                    <img src="/img/logo2.jpg" alt="Peace International">
                </div>
                <div style="text-align: center; flex: 1;">
                    <h1 style="margin: 0 0 10px 0; font-size: 24px; font-weight: bold;">SERVICE VOUCHER</h1>
                    <div style="font-size: 13px;">
                        <strong>Exchange Order No:</strong> {{serviceVoucher.exchangeOrderNo}}<br>
                        <strong>Date:</strong> {{chain "splitDate" "customDate" serviceVoucher.createdDate}}
                    </div>
                </div>
                <div class="company-info">
                    <div>GPO Box: 9484</div>
                    <div>Lazimpat - 2, Kathmandu, Nepal</div>
                    <div>Tel: (977) 01 4444843/44/45</div>
                    <div>Email: peaceintl.mail@@gmail.com</div>
                    <div>mail@@peace-intl.com.np</div>
                    <div>Web: peace-intl.com</div>
                    <div>PAN: 302243385</div>
                </div>
            </div>

            <div class="voucher-title">Services to be provided by:</div>
            <div class="hotel-info">
                <div style="font-size: 16px; font-weight: bold; margin-bottom: 5px;">{{hotel.name}}</div>
                <div style="font-size: 14px;">{{hotel.address}}</div>
            </div>

            <div class="voucher-details">
                <div class="detail-row">
                    <div class="detail-cell" style="width: 40%;"><strong>Name:</strong> {{serviceVoucher.clientName}} X {{serviceVoucher.pax}} PAX</div>
                    <div class="detail-cell" style="width: 30%;"></div>
                    <div class="detail-cell" style="width: 30%;"><strong>File Code:</strong> {{serviceVoucher.fileCodeNo}}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-cell" style="width: 40%;"><strong>ARR. On:</strong> {{splitDate serviceVoucher.arrivalDate}}</div>
                    <div class="detail-cell" style="width: 30%;"><strong>From:</strong> {{serviceVoucher.from}}</div>
                    <div class="detail-cell" style="width: 30%;"><strong>By:</strong> {{serviceVoucher.arrivalFlight}}</div>
                </div>
                <div class="detail-row">
                    <div class="detail-cell" style="width: 40%;"><strong>DEP. On:</strong> {{splitDate serviceVoucher.departureDate}}</div>
                    <div class="detail-cell" style="width: 30%;"><strong>To:</strong> {{serviceVoucher.to}}</div>
                    <div class="detail-cell" style="width: 30%;"><strong>By:</strong> {{serviceVoucher.departureFlight}}</div>
                </div>
            </div>

            <div class="voucher-title">Please provide the following services:</div>
            <div class="services-section">
                {{serviceVoucher.services}}
            </div>

            <div class="footer-section">
                <div style="margin-bottom: 10px;">COLLECT ALL EXTRAS DIRECTLY.</div>
                <div>{{userName}}</div>
            </div>
        </div>
    </script>
}
