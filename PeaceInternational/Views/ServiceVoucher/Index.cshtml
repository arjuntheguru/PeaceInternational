@{
    ViewData["Title"] = "Service Voucher";
}

<div class="animate-fade-in">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-6">
        <div>
            <h1 class="text-4xl font-bold text-base-content">Service Voucher Management</h1>
            <p class="text-base-content/70 mt-2">Manage service vouchers for tours</p>
        </div>
        <label for="voucher-drawer" class="btn btn-primary gap-2 drawer-button">
            <i class="fas fa-plus"></i>
            Add Service Voucher
        </label>
    </div>

    <!-- Multi-field Search -->
    <div class="card bg-base-200 shadow-lg mb-6">
        <div class="card-body">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="form-control">
                    <input type="text" id="searchFieldReceipt" placeholder="Receipt No..." class="input input-bordered" />
                </div>
                <div class="form-control">
                    <input type="text" id="searchFieldFileCode" placeholder="File Code No..." class="input input-bordered" />
                </div>
                <div class="form-control">
                    <input type="text" id="searchFieldHotel" placeholder="Hotel..." class="input input-bordered" />
                </div>
                <div class="form-control">
                    <input type="text" id="searchFieldClientname" placeholder="Client Name..." class="input input-bordered" />
                </div>
            </div>
        </div>
    </div>

    <!-- Service Voucher Table -->
    <div class="card bg-base-100 shadow-lg">
        <div class="card-body p-0">
            <div class="overflow-x-auto">
                <table class="table table-zebra w-full" id="voucherTable">
                    <thead class="bg-primary text-primary-content">
                        <tr>
                            <th class="normal-case text-base">Receipt No.</th>
                            <th class="normal-case text-base">File Code</th>
                            <th class="normal-case text-base">Hotel</th>
                            <th class="normal-case text-base">Client Name</th>
                            <th class="normal-case text-base text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody id="tableBody">
                        <tr>
                            <td colspan="5" class="text-center py-12">
                                <div class="loading loading-spinner loading-lg text-primary"></div>
                                <p class="mt-4">Loading service vouchers...</p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Drawer for Add/Edit Service Voucher -->
<div class="drawer drawer-end z-50">
    <input id="voucher-drawer" type="checkbox" class="drawer-toggle" />
    <div class="drawer-side">
        <label for="voucher-drawer" class="drawer-overlay"></label>
        <div class="bg-base-100 w-full md:w-[800px] min-h-full shadow-2xl">
            <div class="sticky top-0 bg-primary text-primary-content p-6 z-10">
                <div class="flex justify-between items-center">
                    <h2 class="text-2xl font-bold" id="serviceVoucherTitle">Add Service Voucher</h2>
                    <label for="voucher-drawer" class="btn btn-ghost btn-circle btn-sm">
                        <i class="fas fa-times text-xl"></i>
                    </label>
                </div>
            </div>

            <form id="serviceVoucherForm" class="p-6">
                <input type="hidden" id="id" />

                <div class="space-y-4">
                    <!-- Basic Info -->
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Date</span>
                            </label>
                            <input type="text" class="input input-bordered" id="date" disabled />
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">File Code No. <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="fileCodeNo"
                                   id="fileCodeNo"
                                   placeholder="Enter file code" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="fileCodeNo-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Hotel and Client Info -->
                    <div class="divider">Service Details</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control md:col-span-2">
                            <label class="label">
                                <span class="label-text font-semibold">Hotel <span class="text-error">*</span></span>
                            </label>
                            <select class="select select-bordered" name="hotel" id="hotel">
                                <option disabled selected value="">Select Hotel</option>
                            </select>
                            <label class="label">
                                <span class="label-text-alt text-error" id="hotel-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">PAX <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="pax"
                                   id="pax"
                                   placeholder="Number of passengers" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="pax-error"></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Client Name <span class="text-error">*</span></span>
                        </label>
                        <input type="text"
                               class="input input-bordered"
                               name="clientName"
                               id="clientName"
                               placeholder="Enter client name"
                               oninput="this.value = this.value.toUpperCase()" />
                        <label class="label">
                            <span class="label-text-alt text-error" id="clientName-error"></span>
                        </label>
                    </div>

                    <!-- Arrival Information -->
                    <div class="divider">Arrival Information</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Arrival On <span class="text-error">*</span></span>
                            </label>
                            <input type="date"
                                   class="input input-bordered"
                                   name="arrivalOn"
                                   id="arrivalOn" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="arrivalOn-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">From <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="from"
                                   id="from"
                                   placeholder="Origin"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="from-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Flight No. <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="arrivalFlight"
                                   id="arrivalFlight"
                                   placeholder="Flight number"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="arrivalFlight-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Departure Information -->
                    <div class="divider">Departure Information</div>

                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Departure On <span class="text-error">*</span></span>
                            </label>
                            <input type="date"
                                   class="input input-bordered"
                                   name="departureOn"
                                   id="departureOn" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="departureOn-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">To <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="to"
                                   id="to"
                                   placeholder="Destination"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="to-error"></span>
                            </label>
                        </div>

                        <div class="form-control">
                            <label class="label">
                                <span class="label-text font-semibold">Flight No. <span class="text-error">*</span></span>
                            </label>
                            <input type="text"
                                   class="input input-bordered"
                                   name="departureFlight"
                                   id="departureFlight"
                                   placeholder="Flight number"
                                   oninput="this.value = this.value.toUpperCase()" />
                            <label class="label">
                                <span class="label-text-alt text-error" id="departureFlight-error"></span>
                            </label>
                        </div>
                    </div>

                    <!-- Services -->
                    <div class="form-control">
                        <label class="label">
                            <span class="label-text font-semibold">Services <span class="text-error">*</span></span>
                        </label>
                        <textarea rows="5"
                                  class="textarea textarea-bordered"
                                  name="services"
                                  id="services"
                                  placeholder="Add services here"
                                  oninput="this.value = this.value.toUpperCase()"></textarea>
                        <label class="label">
                            <span class="label-text-alt text-error" id="services-error"></span>
                        </label>
                    </div>
                </div>

                <!-- Actions -->
                <div class="flex gap-3 mt-8 sticky bottom-0 bg-base-100 pt-4 border-t border-base-300">
                    <button type="submit" class="btn btn-primary flex-1" id="btnSave">
                        <i class="fas fa-save mr-2"></i>
                        Save Voucher
                    </button>
                    <label for="voucher-drawer" class="btn btn-ghost flex-1">
                        <i class="fas fa-times mr-2"></i>
                        Cancel
                    </label>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- View/Print Receipt Modal (Daisy UI Modal) -->
<dialog id="viewReceipt" class="modal">
    <div class="modal-box max-w-6xl">
        <form method="dialog">
            <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">âœ•</button>
        </form>
        <h3 class="font-bold text-lg mb-4">Service Voucher</h3>

        <div id="invoiceBody" class="overflow-auto max-h-[70vh] bg-white p-4">
            <!-- Print styles -->
            <style>
                .formsize { height: 820px; margin-top: 0px; margin-bottom: 70px; border-style: solid; border-width: 2px; page-break-after: always; }
                .logo img { max-height: 100%; max-width: 80%; margin-left: 50px; padding-top: 15px; padding-right: 30px; }
                .svaddress { margin: 10px 0px 10px 5px; }
                .svrcol1 { border-style: solid none solid none; border-width: 2px; width: 70%; padding: 4px 0 2px 10px; float: left; }
                .svrcol2 { border-style: solid none solid solid; border-width: 2px; width: 30%; padding: 4px 0 2px 10px; float: right; }
                .svrcol3 { border-style: none none solid none; border-width: 2px; width: 40%; padding: 4px 0 2px 10px; float: left; }
                .svrcol4 { border-style: none none solid none; border-width: 2px; width: 30%; padding: 4px 0 2px 10px; float: left; }
                .svrcol5 { border-style: none none solid none; border-width: 2px; width: 30%; padding: 4px 0 2px 10px; float: right; }
                .svcomment { border-style: none none solid none; border-width: 2px; }
                .svcomment .comment { height: 150px; margin: 0px 15px 16px 15px; }
                .endfooter { margin-top: 4px; }
                .svdetail { margin-bottom: 15px; }
                section { overflow: hidden; }
                h6 { font-size: 19px; margin-bottom: 1px; line-height: 18px; }
                .h7 { font-size: 21px; margin-bottom: 5px; }
                .h8 { font-size: 24px; }
            </style>
            <div id="receiptTemplate1"></div>
            <div id="receiptTemplate2"></div>
        </div>

        <div class="modal-action">
            <button type="button" class="btn btn-error" id="printInvoice">
                <i class="fas fa-print mr-2"></i>
                Print
            </button>
            <form method="dialog">
                <button class="btn">Close</button>
            </form>
        </div>
    </div>
</dialog>

<!-- Toast Container -->
<div class="toast toast-top toast-center z-[100]" id="toastContainer"></div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/serviceVoucher.js"></script>
    <script id="entry-template" type="text/x-handlebars-template">
        <div class="formsize">
            <header class="mt-4">
                <div class="flex">
                    <div class="flex-1 logo">
                        <img src="img/logo2.jpg">
                    </div>
                    <div class="flex-none">
                        <h6>GPO Box: 9484</h6>
                        <h6>Lazimpat - 2, Kathmandu, Nepal</h6>
                        <h6>Tel: (977) 01 4444843/44/45</h6>
                        <h6>Email: peaceintl.mail@@gmail.com</h6>
                        <h6>&emsp;&emsp;&emsp;mail@@peace-intl.com.np </h6>
                        <h6>Web: peace-intl.com </h6>
                        <h6>PAN: 302243385 </h6>
                    </div>
                </div>
            </header>
            <br />
            <section>
                <strong class="h8">&nbsp; Services to be provided by:</strong>
                <div class="svaddress">
                    <p class="h7" style="font-size:25px !important;"><strong>{{hotel.name}}</strong></p>
                    <p class="h7" style="font-size:25px !important;"><strong>{{hotel.address}}</strong></p>
                    <p class="h7"><strong>Exchange Order No. : {{serviceVoucher.exchangeOrderNo}}</strong></p>
                    <p class="h7"><strong>Date: {{chain "splitDate" "customDate" serviceVoucher.createdDate}}</strong></p>
                </div>
            </section>
            <section class="svdetail">
                <div class="svrow1">
                    <div class="svrcol1">
                        <p class="h7">Name <strong>{{serviceVoucher.clientName}} X {{serviceVoucher.pax}} PAX</strong></p>
                    </div>
                    <div class="svrcol2">
                        <p class="h7">File Code No. {{serviceVoucher.fileCodeNo}}</p>
                    </div>
                </div>
                <div class="svrow2">
                    <div class="svrcol3">
                        <p class="h7">ARR. On <strong>{{splitDate serviceVoucher.arrivalDate}}</strong></p>
                    </div>
                    <div class="svrcol4">
                        <p class="h7">From  <strong>{{serviceVoucher.from}}</strong></p>
                    </div>
                    <div class="svrcol5">
                        <p class="h7">By <strong>{{serviceVoucher.arrivalFlight}}</strong></p>
                    </div>
                </div>
                <div class="svrow2">
                    <div class="svrcol3">
                        <p class="h7">DEP. On <strong>{{splitDate serviceVoucher.departureDate}}</strong></p>
                    </div>
                    <div class="svrcol4">
                        <p class="h7">For <strong>{{serviceVoucher.to}}</strong></p>
                    </div>
                    <div class="svrcol5">
                        <p class="h7">By <strong>{{serviceVoucher.departureFlight}}</strong></p>
                    </div>
                </div>
            </section>
            <div class="svcomment">
                <strong class="h8">&nbsp;&nbsp;Please provide the following services</strong>
                <p class="comment h7">{{serviceVoucher.services}}</p>
                <div class="endfooter2">
                    <p class="h7"><strong>COLLECT ALL EXTRAS DIRECTLY.</strong></p>
                    <p class="h7 text-center"><strong>{{userName}}</strong></p>
                </div>
            </div>
        </div>
    </script>
}
